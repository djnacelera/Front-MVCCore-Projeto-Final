@model FrontMVC.Models.Mesa.MesaAlterar

@{
    ViewData["Title"] = "Alterar";
}
<div class="wrapper wrapper--w960">
    <div class="card card-2">
        <div class="card-heading2"></div>
        <div class="card-body">
            <h1>Alterar Mesa</h1>
            <form asp-action="Alterar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lugares" class="control-label"></label>
                    <input asp-for="Lugares" class="form-control" />
                    <span asp-validation-for="Lugares" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ambiente" class="control-label"></label>
                    <input asp-for="Ambiente" class="form-control" />
                    <span asp-validation-for="Ambiente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StatusMesa" class="control-label"></label>
                    <select asp-for="StatusMesa" class="form-control">
                        <option value="1">Disponivel</option>
                        <option value="2">Indisponivel</option>
                        <option value="3">Reservado</option>
                    </select>
                    <span asp-validation-for="StatusMesa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            var message = '@TempData["MsgAlert"]'
            if (message.includes("Sucesso"))
                alertify.success(message);
            else if (message != '')
                alertify.error(message);
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    }
